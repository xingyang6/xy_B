<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.a12_8.ui.home.HomeFragment"
        android:label="首页"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.a12_8.ui.dashboard.DashboardFragment"
        android:label="全部服务"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.a12_8.ui.notifications.NotificationsFragment"
        android:label="智慧环保"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.a12_8.ui.news.news"
        android:label="新闻"
        tools:layout="@layout/news_fragment" />

    <fragment
        android:id="@+id/navigation_personal"
        android:name="com.example.a12_8.ui.personal.personal"
        android:label="个人中心"
        tools:layout="@layout/personal_fragment" />
</navigation>