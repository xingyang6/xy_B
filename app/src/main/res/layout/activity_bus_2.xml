<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bus.bus_2">

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/xiahauixan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="时间选择"
            android:textColor="#2B2929" />

        <TextView
            android:id="@+id/bus_2_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021-12-10"
            android:textColor="#2B2929" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/xiahauixan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="日期选择"
            android:textColor="#2B2929" />

        <TextView
            android:id="@+id/bus_2_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:00"
            android:textColor="#2B2929" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/xiahauixan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="姓名"
            android:textColor="#2B2929" />

        <EditText
            android:id="@+id/bus_2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="right"
            android:background="@null"
            android:inputType="text"
            android:hint="请输入姓名" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/xiahauixan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号码"
            android:textColor="#2B2929" />

        <EditText
            android:digits="1234567890"
            android:id="@+id/bus_2_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:background="@null"
            android:inputType="textPersonName"
            android:hint="请输入手机号码" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/xiahauixan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上车地点"
            android:textColor="#2B2929" />

        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/bus_2_spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/xiahauixan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下车地点"
            android:textColor="#2B2929" />

        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/bus_2_spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/bus2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style_2"
        android:text="下一步"
        android:textColor="#FFFFFF" />
</LinearLayout>